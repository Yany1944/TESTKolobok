<Window x:Class="TEST.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Столовая Колобок - Авторизация"
        Icon="/Images/kolobok.png"
        Height="550"
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Цвета, используемые в MainWindow -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#34495E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#BDC3C7"/>

        <!-- Стиль кнопки "Войти" -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль кнопки "Отмена" -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль кнопки Telegram -->
        <Style x:Key="TelegramButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0088CC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0077B3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль PasswordBox -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Контейнер окна -->
    <Border Background="White"
            CornerRadius="12"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Opacity="0.3" 
                            BlurRadius="20" 
                            ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок окна -->
            <Border Grid.Row="0"
                    Background="#2C3E50" 
                    CornerRadius="12,12,0,0"
                    Padding="20,15"
                    MouseLeftButtonDown="HeaderBorder_MouseLeftButtonDown"
                    Cursor="Hand">
                <Grid>
                    <!-- Кнопка закрытия -->
                    <Button x:Name="CloseButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-5,0,0"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Content>×</Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E74C3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Иконка и заголовок -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Круглая аватарка Колобка -->
                        <Border Width="75" 
                                Height="75" 
                                CornerRadius="40"
                                BorderBrush="White"
                                BorderThickness="3">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/kolobok.png" 
                                          Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="АВТОРИЗАЦИЯ" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <StackPanel Grid.Row="1" 
                       Margin="40,30,40,30">

                <!-- Заголовок -->
                <TextBlock Text="Столовая Колобок"
                          FontSize="22"
                          FontWeight="Bold"
                          Foreground="{StaticResource TextPrimary}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,5"/>

                <TextBlock Text="Система учёта и управления"
                          FontSize="13"
                          Foreground="{StaticResource TextSecondary}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,25"/>

                <!-- Подпись поля -->
                <TextBlock Text="Введите пароль для доступа:"
                          FontSize="14"
                          Foreground="{StaticResource TextPrimary}"
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>

                <!-- Поле пароля -->
                <PasswordBox x:Name="passwordBox"
                            Style="{StaticResource ModernPasswordBoxStyle}"
                            PasswordChar="●"
                            Margin="0,0,0,12"
                            KeyDown="PasswordBox_KeyDown"/>

                <!-- Кнопка входа через Telegram -->
                <Button Content="📱 Войти через Telegram"
                       Style="{StaticResource TelegramButtonStyle}"
                       Margin="0,0,0,0"
                       Click="TelegramLoginButton_Click" Height="42.62"/>

                <!-- ✅ POPUP ДЛЯ СООБЩЕНИЙ (не занимает место в layout) -->
                <Popup x:Name="MessagePopup"
                      Placement="Top"
                      PlacementTarget="{Binding ElementName=passwordBox}"
                      StaysOpen="True"
                      AllowsTransparency="True"
                      VerticalOffset="-10">
                    <Border Background="#E74C3C"
                           CornerRadius="5"
                           Padding="12,8"
                           Margin="0,0,0,5">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                            Opacity="0.2" 
                                            BlurRadius="8" 
                                            ShadowDepth="2"/>
                        </Border.Effect>
                        <TextBlock x:Name="PopupMessage"
                                  Text="Сообщение"
                                  Foreground="White"
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  MaxWidth="320"/>
                    </Border>
                </Popup>

                <!-- Скрытый TextBlock для совместимости -->
                <TextBlock x:Name="StatusMessage"
                          Visibility="Collapsed"/>

                <!-- Кнопки Войти и Отмена -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                           Content="ВОЙТИ"
                           Style="{StaticResource LoginButtonStyle}"
                           IsDefault="True"
                           Click="Accept_Click"/>

                    <Button Grid.Column="2"
                           Content="ОТМЕНА"
                           Style="{StaticResource CancelButtonStyle}"
                           IsCancel="True"
                           Click="Cancel_Click"/>
                </Grid>

                <!-- Копирайт -->
                <TextBlock Text="© 2025 Столовая Колобок"
                          FontSize="11"
                          Foreground="{StaticResource TextSecondary}"
                          HorizontalAlignment="Center"
                          Margin="0,25,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
