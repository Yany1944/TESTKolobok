<Window x:Class="TEST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Столовая „Колобок“ - Система учёта"
        Icon="/Images/kolobok.png"
        Height="720"
        Width="1280"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" AllowsTransparency="False">

    <Window.Resources>
        <!-- Цветовая палитра -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#34495E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="SidebarBackground" Color="#2C3E50"/>
        <SolidColorBrush x:Key="ContentBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#BDC3C7"/>
        <SolidColorBrush x:Key="HoverColor" Color="#1ABC9C"/>
        <SolidColorBrush x:Key="StatusBarBackground" Color="#34495E"/>

        <!-- Стиль для заголовка -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для подзаголовка -->
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#BDC3C7"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для категорий навигации -->
        <Style x:Key="NavCategoryStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#95A5A6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20,20,0,10"/>
        </Style>

        <!-- Стиль для кнопок навигации -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для статусной строки -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="15,0"/>
        </Style>

        <!-- Стиль для секционных заголовков -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Шапка приложения -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Круглая аватарка через Ellipse -->
                    <!-- Круглая иконка в шапке приложения -->
                    <Border Width="40" 
        Height="40" 
        CornerRadius="20"
        BorderBrush="{StaticResource AccentColor}"
        BorderThickness="2"
        Margin="0,0,10,0">
                        <Border.Background>
                            <ImageBrush ImageSource="/Images/kolobok.png" 
                    Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>



                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Столовая „Колобок“" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Text="Система учёта и управления" Style="{StaticResource SubHeaderTextStyle}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Информация о пользователе -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Margin="0,0,15,0" HorizontalAlignment="Right">
                        <TextBlock Text="Администратор" 
                                   Foreground="White" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   HorizontalAlignment="Right"/>
                        <TextBlock x:Name="CurrentDateText" 
                                   Foreground="#BDC3C7" 
                                   FontSize="11"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                    <Border Width="40" Height="40" 
                            CornerRadius="20" 
                            Background="{StaticResource SecondaryColor}">
                        <TextBlock Text="👤" 
                                   FontSize="20" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        

        <!-- Основная область контента -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Боковая панель навигации -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SidebarBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">

                        <!-- Основная секция -->
                        <TextBlock Text="ОСНОВНОЕ" 
                                   Style="{StaticResource NavCategoryStyle}"
                                   Margin="20,10,0,10"/>

                        <Button x:Name="BtnAllTables" 
                                Content="📊  Работа с таблицами" 
                                Style="{StaticResource NavButtonStyle}"
                                Background="#1ABC9C"/>

                        <!-- Категория: Меню и заказы -->
                        <TextBlock Text="МЕНЮ И ЗАКАЗЫ" 
                                   Style="{StaticResource NavCategoryStyle}"/>

                        <Button x:Name="BtnCategories" 
                                Content="🏷️  Категории меню" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnMenuItems" 
                                Content="🍽️  Блюда меню" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnRecipes" 
                                Content="📝  Рецепты" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnOrders" 
                                Content="📋  Заказы" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnOrderItems" 
                                Content="🛒  Заказанные блюда" 
                                Style="{StaticResource NavButtonStyle}"/>

                        <!-- Категория: Платежи -->
                        <TextBlock Text="ПЛАТЕЖИ" 
                                   Style="{StaticResource NavCategoryStyle}"/>

                        <Button x:Name="BtnPaymentMethods" 
                                Content="💰  Виды оплаты" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnPayments" 
                                Content="💳  Платежи" 
                                Style="{StaticResource NavButtonStyle}"/>

                        <!-- Категория: Залы и столы -->
                        <TextBlock Text="ЗАЛЫ И СТОЛЫ" 
                                   Style="{StaticResource NavCategoryStyle}"/>

                        <Button x:Name="BtnDiningRooms" 
                                Content="🏪  Залы" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnTablesSeating" 
                                Content="💺  Столы" 
                                Style="{StaticResource NavButtonStyle}"/>

                        <!-- Категория: Складской учёт -->
                        <TextBlock Text="СКЛАДСКОЙ УЧЁТ" 
                                   Style="{StaticResource NavCategoryStyle}"/>

                        <Button x:Name="BtnInventoryItems" 
                                Content="📦  Складские позиции" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnStockMovements" 
                                Content="📊  Движения склада" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnSuppliers" 
                                Content="🚚  Поставщики" 
                                Style="{StaticResource NavButtonStyle}"/>

                        <!-- Категория: Персонал -->
                        <TextBlock Text="ПЕРСОНАЛ" 
                                   Style="{StaticResource NavCategoryStyle}"/>

                        <Button x:Name="BtnEmployees" 
                                Content="👥  Сотрудники" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnRoles" 
                                Content="🎯  Роли сотрудников" 
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="BtnShifts" 
                                Content="⏰  Смены" 
                                Style="{StaticResource NavButtonStyle}"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Область контента -->
            <Border Grid.Column="1" 
                    Background="{StaticResource BackgroundColor}">
                <Grid Margin="30,25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок секции и быстрые действия -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="PageTitleText"
                                       Text="Работа с таблицами базы данных" 
                                       Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBlock x:Name="PageSubtitleText"
                                       Text="Просмотр, редактирование и управление данными системы" 
                                       Foreground="{StaticResource TextSecondary}" 
                                       FontSize="13"/>
                        </StackPanel>

                        <!-- Быстрые действия CRUD -->
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Top">

                            <!-- Кнопка добавления -->
                            <Button x:Name="BtnAdd"
                                    Content="➕ Добавить" 
                                    Background="{StaticResource AccentColor}"
                                    Foreground="White"
                                    Padding="15,8,15,8"
                                    FontSize="13"
                                    Margin="0,0,5,0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnAdd_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Кнопка удаления -->
                            <Button x:Name="BtnDelete"
                                    Content="🗑️ Удалить" 
                                    Background="#E74C3C"
                                    Foreground="White"
                                    Padding="15,8,15,8"
                                    FontSize="13"
                                    Margin="0,0,5,0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnDelete_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Кнопка сохранения -->
                            <Button x:Name="BtnSave"
                                    Content="💾 Сохранить" 
                                    Background="#27AE60"
                                    Foreground="White"
                                    Padding="15,8,15,8"
                                    FontSize="13"
                                    Margin="0,0,5,0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnSave_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Кнопка обновления -->
                            <Button x:Name="BtnRefresh"
                                    Content="🔄 Обновить" 
                                    Background="{StaticResource SecondaryColor}"
                                    Foreground="White"
                                    Padding="15,8,15,8"
                                    FontSize="13"
                                    Margin="0,0,0,0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnRefresh_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </StackPanel>
                    </Grid>

                    <!-- Контент с вкладками -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource ContentBackground}"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1">
                        <TabControl x:Name="MainTabControl"
            Margin="0"
            BorderThickness="0"
            Background="Transparent">
                            <TabControl.Resources>
                                <Style TargetType="TabItem">
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="20,12"/>
                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="BorderBrush" 
                                        Value="{StaticResource AccentColor}"/>
                                                        <Setter Property="Foreground" 
                                        Value="{StaticResource AccentColor}"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" 
                                        Value="#F8F9FA"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Foreground" 
                                        Value="{StaticResource TextSecondary}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabControl.Resources>
                        </TabControl>

                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Статусная строка -->
        <Border Grid.Row="2" 
                Background="{StaticResource StatusBarBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" 
                               Text="Готово к работе" 
                               Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock Text="●" 
                               Foreground="#27AE60" 
                               Margin="10,0"
                               VerticalAlignment="Center"
                               FontSize="10"/>
                    <TextBlock Text="Соединение установлено" 
                               Foreground="#95A5A6" 
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                           Text="v1.0.0 | Казань, 2025" 
                           Foreground="#95A5A6" 
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
